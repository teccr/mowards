<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mowards.Views.MasterDetailContent"
             x:Name="MasterDetailContent"
             Title="Main Page"
             >
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Image Source="logo.png" HeightRequest="250" WidthRequest="200" Margin="0,20,0,10"/>
            <Label Text="Welcome to MoWards!" Font="24" FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand" />
            <Label XAlign="Center" Text="-You can look all the information related to the Oscar's Academy Awards Winners and Nominees"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="-Add Movies to a Favorites List!"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="-Write Reviews!"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Vote for your favorites!"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Play some trivia to challenge your skills!"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Take a Picture with a Frame holding an Oscar!"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>